<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.instagram">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagram">
        <activity android:name=".Activity.Home.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activity.Login" />
        <activity android:name=".Activity.MainActivity"/>
        <!-- Home -->
        <activity android:name=".Activity.Home.FollowingAccount" />

        <!-- Search -->
        <activity android:name=".Activity.Search.Search" />
        <!-- Add -->
        <activity android:name=".Activity.Add.Add" />
        <!-- Shop -->
        <activity android:name=".Activity.Shop.Shop" />
        <!-- User -->
        <activity android:name=".Activity.Account.Account" />

    </application>

</manifest>